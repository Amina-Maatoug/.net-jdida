@page "/login"
@using pharmacieBlazor.Models
@using pharmacieBlazor.Services
@inject AccountService AccountService
@inject CustomAuthStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Connexion</PageTitle>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-lock" style="font-size: 3rem; color: #0d6efd;"></i>
                        <h3 class="card-title mt-3">Connexion</h3>
                        <p class="text-muted">Connectez-vous pour accéder à l'application</p>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                        </div>
                    }

                    <EditForm Model="@loginDto" OnValidSubmit="HandleLogin">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="username" class="form-label">
                                <i class="bi bi-person"></i> Nom d'utilisateur
                            </label>
                            <InputText id="username" class="form-control form-control-lg"
                                       @bind-Value="loginDto.Username"
                                       placeholder="votre nom d'utilisateur" />
                            <ValidationMessage For="@(() => loginDto.Username)" class="text-danger" />
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label">
                                <i class="bi bi-lock"></i> Mot de passe
                            </label>
                            <InputText id="password" type="password" class="form-control form-control-lg"
                                       @bind-Value="loginDto.Password"
                                       placeholder="••••••••" />
                            <ValidationMessage For="@(() => loginDto.Password)" class="text-danger" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Connexion en cours...</span>
                                }
                                else
                                {
                                    <i class="bi bi-box-arrow-in-right me-2"></i>
                                    <span>Se connecter</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> Contactez l'administrateur si vous avez oublié vos identifiants
                        </small>
                        <p>Pas encore de compte ? <a href="/register">Créer un compte</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginDto loginDto = new();
    private string? errorMessage;
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await AccountService.LoginAsync(loginDto);

            if (response != null && !string.IsNullOrEmpty(response.Token))
            {
                await AuthStateProvider.MarkUserAsAuthenticated(response.Token);
                Navigation.NavigateTo("/", true);
            }
            else
            {
                errorMessage = "Nom d'utilisateur ou mot de passe incorrect.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
