@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@page "/ordonnances/create"
@page "/ordonnances/edit/{Id:int}"
@using pharmacieBlazor.Models
@using Front.Services
@inject OrdonnanceService OrdonnanceService
@inject PatientService PatientService
@inject MedicamentService MedicamentService
@inject AccountService AccountService
@inject NavigationManager Navigation

<h3>
    <i class="bi bi-file-earmark-medical"></i> @(Id == 0 ? "Créer" : "Modifier") une Ordonnance
</h3>

@if (isLoadingData)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status"></div>
        <p>Chargement des données...</p>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-10">
            <div class="card">
                <div class="card-body">
                    <EditForm Model="@ordonnance" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="mb-3">
                            <label for="date" class="form-label">Date *</label>
                            <InputDate id="date" class="form-control" @bind-Value="ordonnance.Date" />
                            <ValidationMessage For="@(() => ordonnance.Date)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="patientId" class="form-label">Patient *</label>
                            <InputSelect id="patientId" class="form-select" @bind-Value="ordonnance.PatientId">
                                <option value="0">-- Sélectionner un patient --</option>
                                @foreach (var patient in patients)
                                {
                                    <option value="@patient.Id">@patient.Nom</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => ordonnance.PatientId)" class="text-danger" />
                        </div>

                        @if (currentUser != null)
                        {
                            <div class="mb-3">
                                <label class="form-label">Pharmacien</label>
                                <input type="text" class="form-control" value="@currentUser.Nom" readonly />
                                <small class="text-muted">Vous serez automatiquement assigné à cette ordonnance</small>
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Médicaments</label>
                            <div class="card">
                                <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                                    @if (!medicaments.Any())
                                    {
                                        <div class="alert alert-info">
                                            <i class="bi bi-info-circle"></i> Aucun médicament disponible. Veuillez d'abord créer des médicaments.
                                        </div>
                                    }
                                    else
                                    {
                                        @foreach (var medicament in medicaments)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       id="med-@medicament.Id"
                                                       checked="@ordonnance.MedicamentIds.Contains(medicament.Id)"
                                                       @onchange="e => ToggleMedicament(medicament.Id, (bool)e.Value!)" />
                                                <label class="form-check-label" for="med-@medicament.Id">
                                                    @medicament.Nom - @medicament.Dosage
                                                </label>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                            <small class="form-text text-muted">
                                @ordonnance.MedicamentIds.Count médicament(s) sélectionné(s)
                            </small>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status"></span>
                                    <span> Enregistrement...</span>
                                }
                                else
                                {
                                    <i class="bi bi-save"></i>
                                    <span> Enregistrer</span>
                                }
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                <i class="bi bi-x-circle"></i> Annuler
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private OrdonnanceDto ordonnance = new();
    private List<PatientDto> patients = new();
    private List<MedicamentDto> medicaments = new();
    private UserProfileDto? currentUser;

    private bool isSaving = false;
    private bool isLoadingData = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadReferenceData();

        if (Id != 0)
        {
            var existing = await OrdonnanceService.GetOrdonnanceByIdAsync(Id);
            if (existing != null)
            {
                ordonnance = existing;
            }
            else
            {
                Navigation.NavigateTo("/ordonnances");
            }
        }

        isLoadingData = false;
    }

    private async Task LoadReferenceData()
    {
        patients = await PatientService.GetAllPatientsAsync();
        medicaments = await MedicamentService.GetAllMedicamentsAsync();
        currentUser = await AccountService.GetMonProfilAsync();
    }

    private void ToggleMedicament(int medicamentId, bool isChecked)
    {
        if (isChecked)
        {
            if (!ordonnance.MedicamentIds.Contains(medicamentId))
            {
                ordonnance.MedicamentIds.Add(medicamentId);
            }
        }
        else
        {
            ordonnance.MedicamentIds.Remove(medicamentId);
        }
    }

    private async Task HandleValidSubmit()
    {
        isSaving = true;
        try
        {
            // Set the current user as the pharmacien
            if (currentUser != null)
            {
                ordonnance.PharmacienId = currentUser.Id;
            }

            bool success;
            if (Id == 0)
            {
                success = await OrdonnanceService.CreateOrdonnanceAsync(ordonnance);
            }
            else
            {
                ordonnance.Id = Id;
                success = await OrdonnanceService.UpdateOrdonnanceAsync(ordonnance);
            }

            if (success)
            {
                Navigation.NavigateTo("/ordonnances");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/ordonnances");
    }
}
