@page "/ordonnances/create"
@page "/ordonnances/edit/{Id:int}"
@using Microsoft.AspNetCore.Authorization
@using pharmacieBlazor.Models
@using pharmacieBlazor.Services
@attribute [Authorize]
@inject OrdonnanceService OrdonnanceService
@inject PatientService PatientService
@inject MedicamentService MedicamentService
@inject AccountService AccountService
@inject NavigationManager Navigation

<h3>
    <i class="bi bi-file-earmark-medical"></i>
    @(Id == 0 ? "Créer" : "Modifier") une Ordonnance
</h3>

@if (isLoadingData)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status"></div>
        <p>Chargement des données...</p>
    </div>
}
else
{
    <EditForm Model="@ordonnance" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary class="text-danger" />

        <div class="mb-3">
            <label for="date" class="form-label">Date *</label>
            <InputDate id="date" class="form-control" @bind-Value="ordonnance.Date" />
        </div>

        <div class="mb-3">
            <label for="patient" class="form-label">Patient *</label>
            <InputSelect id="patient" class="form-select" @bind-Value="ordonnance.PatientId">
                <option value="">-- Choisir un patient --</option>
                @foreach (var p in patients)
                {
                    <option value="@p.Id">@p.Nom</option>
                }
            </InputSelect>
        </div>

        <div class="mb-3">
            <label class="form-label">Médicaments et Quantités</label>
            <div class="card">
                <div class="card-body">
                    @foreach (var med in medicaments)
                    {
                        <div class="row mb-3 align-items-center">
                            <div class="col-md-1">
                                <input type="checkbox"
                                       class="form-check-input"
                                       id="med_@med.Id"
                                       checked="@selectedMedicaments.ContainsKey(med.Id)"
                                       @onchange="@(e => ToggleMedicament(med.Id, (bool)e.Value!, med))" />
                            </div>
                            <div class="col-md-5">
                                <label class="form-check-label" for="med_@med.Id">
                                    <strong>@med.Nom</strong> (@med.Dosage)
                                    <br />
                                    <small class="text-muted">Stock disponible: @med.Quantite</small>
                                </label>
                            </div>
                            <div class="col-md-6">
                                @if (selectedMedicaments.ContainsKey(med.Id))
                                {
                                    <div class="input-group">
                                        <span class="input-group-text">Quantité</span>
                                        <input type="number"
                                               class="form-control"
                                               min="1"
                                               max="@med.Quantite"
                                               @bind="selectedMedicaments[med.Id]"
                                               @oninput="@(e => UpdateQuantity(med.Id, e.Value?.ToString()))" />
                                        <span class="input-group-text">/ @med.Quantite</span>
                                    </div>
                                    @if (selectedMedicaments[med.Id] > med.Quantite)
                                    {
                                        <small class="text-danger">Stock insuffisant!</small>
                                    }
                                }
                            </div>
                        </div>
                        <hr />
                    }

                    @if (!selectedMedicaments.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Veuillez sélectionner au moins un médicament
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary" disabled="@(isSaving || !selectedMedicaments.Any() || HasInsufficientStock())">
                @if (isSaving)
                {
                    <span class="spinner-border spinner-border-sm" role="status"></span>
                    <span> Enregistrement...</span>
                }
                else
                {
                    <i class="bi bi-save"></i>
                    <span> Enregistrer</span>
                }
            </button>
            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                <i class="bi bi-x-circle"></i> Annuler
            </button>
        </div>
    </EditForm>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private OrdonnanceDto ordonnance = new();
    private List<PatientDto> patients = new();
    private List<MedicamentDto> medicaments = new();
    private UserProfileDto? currentUser;
    private bool isSaving = false;
    private bool isLoadingData = true;

    // Track selected medicaments with their quantities
    private Dictionary<int, int> selectedMedicaments = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadReferenceData();

        if (Id != 0)
        {
            var existing = await OrdonnanceService.GetOrdonnanceByIdAsync(Id);
            if (existing != null)
            {
                ordonnance = existing;
                // Load existing quantities
                selectedMedicaments = new Dictionary<int, int>(ordonnance.MedicamentQuantites);
            }
            else
            {
                Navigation.NavigateTo("/ordonnances");
            }
        }

        isLoadingData = false;
    }

    private async Task LoadReferenceData()
    {
        try
        {
            patients = await PatientService.GetAllPatientsAsync();
            medicaments = await MedicamentService.GetAllMedicamentsAsync();
            currentUser = await AccountService.GetMonProfilAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur chargement données : {ex.Message}");
        }
    }

    private void ToggleMedicament(int medId, bool isChecked, MedicamentDto med)
    {
        if (isChecked)
        {
            if (!selectedMedicaments.ContainsKey(medId))
            {
                // Default quantity is 1
                selectedMedicaments[medId] = 1;
            }
        }
        else
        {
            selectedMedicaments.Remove(medId);
        }
    }

    private void UpdateQuantity(int medId, string? value)
    {
        if (int.TryParse(value, out int quantity) && quantity > 0)
        {
            if (selectedMedicaments.ContainsKey(medId))
            {
                selectedMedicaments[medId] = quantity;
            }
        }
    }

    private bool HasInsufficientStock()
    {
        foreach (var item in selectedMedicaments)
        {
            var med = medicaments.FirstOrDefault(m => m.Id == item.Key);
            if (med != null && item.Value > med.Quantite)
            {
                return true;
            }
        }
        return false;
    }

    private async Task HandleValidSubmit()
    {
        if (!selectedMedicaments.Any())
        {
            Console.WriteLine("Erreur: Aucun médicament sélectionné");
            return;
        }

        if (HasInsufficientStock())
        {
            Console.WriteLine("Erreur: Stock insuffisant pour certains médicaments");
            return;
        }

        isSaving = true;
        try
        {
            if (currentUser != null)
                ordonnance.PharmacienId = currentUser.Id;

            // Update the ordonnance with selected medicaments and quantities
            ordonnance.MedicamentIds = selectedMedicaments.Keys.ToList();
            ordonnance.MedicamentQuantites = new Dictionary<int, int>(selectedMedicaments);

            bool success = Id == 0
                ? await OrdonnanceService.CreateOrdonnanceAsync(ordonnance)
                : await OrdonnanceService.UpdateOrdonnanceAsync(ordonnance);

            if (success)
                Navigation.NavigateTo("/ordonnances");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel() => Navigation.NavigateTo("/ordonnances");
}